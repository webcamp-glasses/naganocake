<div class="container">
    <div class="col-lg-12 mt-5">
      <%= @end_user.last_name %> <%= @end_user.first_name %> さんの会員詳細
    </div>
    
  <div class="row">
    <div class="col-lg-6 mt-5 mb-">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @end_user.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @end_user.last_name %>　<%= @end_user.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @end_user.last_kana_name %>　<%= @end_user.first_kana_name %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @end_user.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @end_user.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @end_user.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @end_user.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td class="text-success"><%= @end_user.is_deleted %></td>
          </tr>
          <tr>
            <td>
              <%= link_to "編集する", edit_admins_end_user_path(@end_user), class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to "注文履歴一覧を見る", admins_order_path(@end_user), class: "btn btn-primary" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  
</div>