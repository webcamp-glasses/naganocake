 <div class="row">
    <div class="col-sm-10 offset-3">
      <h3 class="mt-3 mb-3">ジャンル編集</h3>
    <%= form_with model: @genre, url: admins_genre_path(@genre), local: true do |f| %>

      <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
