<div class="container">
  <div class="row">
    <h4 class="col-lg-12 mt-5 mb-5">注文履歴一覧</h4>
  </div>
  <div class="row">
    <div class="col-lg-10 col-md-offset-2 mb-5">
      <table class="table table-rows">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
  
        <tbody>
          <%# @orders.each do |order_detail| %>
          <tr>
            <td class="align-middle">
              <%#= created_at %>
            </td>
            <td class="align-middle">
              <%#= end_user.last_name %> <%#= end_user.first_name %>
            </td>
            <td class="align-middle">
              <%#= quantity %>
            </td>
            <td class="align-middle">
              <%# if orders.order_status == 0 %>
              　<p>入金待ち</p>
              <%# elsif oorder.order_status == 1 %>
              　<p>入金確認</p>
              <%# elsif orders.order_status == 2 %>
                <p>制作中</p>
              <%# elsif order.order_status == 3 %>
                <p>発送準備中</p>
              <%# elsif orders.order_status == 4 %>
                <p>発送</p>
              <%# end %>
            </td>
          </tr>
          <%# end %>
        </tbody>
      </table>
    </div>
  </div>

</div>