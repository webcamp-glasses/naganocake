 <div class="row">
          <div class="mx-auto">
              <h3 class="text-left">商品編集</h3>
            <%= form_with model: @product, url: admins_product_path, local:true do |f| %>
                <div class="form-group row">
                 <%= f.label :"商品画像", class: "col-sm-2 control-label" %>
                 <%= f.attachment_field :image, class: "image" %>
                </div>

                <div class="form-group row">
                 <%= f.label :"商品名", class: "col-sm-3 control-label" %>
                 <%= f.text_field :name, class: "form-control col-sm-9 form-control-static name" %>
                </div>

                <div class="form-group row">
                 <%= f.label :"商品説明", class: "col-sm-3 control-label" %>
                 <%= f.text_area :description, class:"form-control col-sm-9 form-control-static description"%>
                </div>

                <div class="form-group row">
                 <%= f.label :"ジャンル", class: "col-sm-4 control-label" %>
                    <!--プルダウン検索フォーム追加-->
                 <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: ""} %>
                </div>

                <div class="form-group row">
                  <%= f.label :"税込価格", class: "col-sm-4 control-label" %>
                  <%= f.text_field :price, class:"form-control col-sm-3 form-control-static price" %>
                </div>

                <div class="form-group row">
                  <%= f.label :"販売ステータス", class: "col-sm-5 control-label" %>
                  <%= f.radio_button :is_active, :販売中 %>販売中
                  <%= f.radio_button :is_active, :売り切れ %>販売停止中
                </div>

                <div class="form-group">
                  <%= f.submit "変更を保存",class:"col-3 btn btn-success" %>
                </div>
            <% end %>
            </div>
        </div>