<div class = "container">
  <h4 class="text-left">商品一覧</h4>
  <%= link_to "新規商品登録", new_admins_product_path, class: "btn btn-success" %>
    <div class = "row">
      <div class = "mx-auto"><!--"col-md-8 offset-md-1-->
        <div class = "table table-hover table-bordered table-condensed">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.id %></td>
                <td><%= link_to product.name, admins_product_path(product) %></td>
                <td><%= product.price %></td>
                <td><%= product.genre.name %></td>
                <!--販売ステータスの条件分岐 販売中or販売停止中-->
                <td>
                  <% if product.is_active == true %>
                    <p>販売中</p>
                  <% else %>
                    <p>売り切れ</p>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbady>
        </div>
      </div>
    </div>
  </div>
