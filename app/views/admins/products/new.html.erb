<h2>商品新規登録</h2>

<div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <%= form_with model: @purduct, local:true do |f| %>
          <div class="form-group">
            <label class="col-xl-6">商品画像</label></br>
            <%= f.attachment_field :image, %>
          </div>

          <div class="form-group">
          <label class="col-xl-6">商品名</label>
           <%= f.text_field :name, class:"form-control col-sm-9 form-control-static name"%>
          </div>

          <div class="form-group">
            <label class="col-xl-6">商品説明</label>
            <%= f.text_area :description, class:"form-control col-sm-9 form-control-static description"%>
          </div>

          <div class="form-group">
            <label class="col-xl-6">ジャンル名</label>
     　　　　　　<%= f.collection_select(:genre_id, @genres, :id, prompt: "-- 選択してください --", class: "col-sm-9 genre_id") %>
          </div>

          <div class="form-group">
            <label class="col-xl-6">税込価格</label>円
            <%= f.text_field :price, class:"form-control col-sm-3 form-control-static price" %>
          </div>

          <div class="form-group">
            <label class="col-xl-6">販売ステータス</label>
            <%= f.select :is_active,[['販売中', true], ['販売停止中', false]], prompt: "-- 選択してください --" %>
          </div>

          <div class="form-group">
            <%= f.submit "新規登録",class:"btn btn-secondary" %>
          </div>


        <% end %>
    </div>
  </div>
