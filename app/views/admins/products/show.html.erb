  <div class="row">
    <div class="col-xs-12">
      <div class="col-xs-4">
	      <div id="img_field">
	          <%= attachment_image (@product, :image, size: "300x220") %>
	      </div>
      </div>
        <div class="col-xs-6">
            <div class="field">
             <p>商品名<%= @product.name %></p>
            </div><br>
                  	      
            <div class="field">
              <p>商品説明<%= @product.description %></p><br>
            </div>
                  	      
            <div class="field">
              <p>ジャンル<%= @product.genre.name %></p><br>
            </div>
                  	      
            <div class="field">
              <% price = 2500 * 1.05 %>
              <p>税込価格<%= tax_price(@product.tax_out_price).to_s(:delimited) %>
                 (<%= @product.tax_out_price.to_s(:delimited) %>) 円<br>
                 (税抜価格)
              </p><br>
            </div>
                  	      
            <div class="field">
              <p>
                販売ステータス
                <% if @product.is_s_active == true %>
              　<i class="fas fa-bullseye green"></i>販売中
