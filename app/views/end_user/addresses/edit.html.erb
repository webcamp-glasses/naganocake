<div class="container">
  <div class="col-lg-10 mt-3 mb-3">
    <h3>配送先編集</h3>
  </div>
    <div class="row">
      <div class="col-lg-12 mt-3 mb-2">
        <%= form_with(model:@address, url:address_path, local: true ) do |f| %>
        <div class="col-xs-10">
          <div class="col-lg-12">
            <%= f.label :"郵便番号(ハイフンなし)",class: "col-sm-5 control-label" %>
            <%= f.text_field :postal_code ,class: "col-sm-5 form-control-static" %>
          </div>
          <div class="col-lg-12">
            <%= f.label :"住所" ,class: "col-sm-5 control-label" %>
            <%= f.text_field :address ,class: "col-sm-5 form-control-static" %>
          </div>
          <div class="col-lg-12">
            <%= f.label :"宛名" ,class: "col-sm-5 control-label" %>
            <%= f.text_field :name ,class: "col-sm-5 form-control-static" %>
          </div>
          <div class="col-lg-12 my-3">
            <%= f.submit '変更を保存' ,class: "col-xs-6 btn btn-success" %>
          </div>
        </div>
        <% end %>  
      </div>
    </div>
</div>