<div class="container">
  <div class="col-xs-10 mt-3">
    <h3>配送先登録/一覧</h3>
  </div>
    <div class="row">
      <div class="col-sm-6 mt-3 mb-2">
        <%= form_with(model:@addresses, url:addresses_path, local: true )  do |f| %>
          <div class="col-xs-10">
            <div class="col-lg-12">
              <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-sm-5 control-label" %>
              <%= f.text_field :postal_code, class: "col-sm-5 form-control-static" %>
            </div>
            <div class="col-lg-12">
              <%= f.label :"住所" ,class: "col-sm-5 control-label" %>
              <%= f.text_field :address, class: "col-sm-5 form-control-static" %>
            </div>
            <div class="col-lg-12">
              <%= f.label :"宛名" ,class: "col-sm-5 control-label" %>
              <%= f.text_field :name, :value =>"", class: "col-sm-5 form-control-static" %>　
              <%= f.submit '新規登録' ,class: "mb-5 btn btn-success " %>
            </div>
          </div>
        <% end %>
        <div>
          <%= render "index", addresses: @addresses %>
        </div>
      </div>
    </div>
</div>