<div class="container">
  <div class="row">
	  <h2 class="col-lg-12 py-3">会員情報編集</h2>
	</div>
      <%= form_with model: @end_user, url:end_user_path, local: true ,method: :put do |f| %>
        <div>
          <%= f.label :"氏名", class: "col-sm-3 py-1 control-label" %>
          <%= f.text_field :last_name, class: "col-sm-3" %>
          <%= f.text_field :first_name, class: "col-sm-3" %>
        </div>
        <div>
          <%= f.label :"フリガナ", class: "col-sm-3 py-1 control-label" %>
          <%= f.text_field :last_kana_name, class: "col-sm-3" %>
          <%= f.text_field :first_kana_name, class: "col-sm-3" %>
        </div>
        <div>
          <%= f.label :"メールアドレス", class: "col-sm-3 py-1 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static" %>
        </div>
        <div>
          <%= f.label :"郵便番号", class: "col-sm-3 py-1 control-label" %>
          <%= f.text_field :postal_code, class: "col-sm-2 form-control-static" %>
        </div>
        <div>
          <%= f.label :"住所", class: "col-sm-3 py-1 control-label" %>
          <%= f.text_field :address, class: "col-sm-3 form-control-static" %>
        </div>
        <div>
          <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 py-1 control-label" %>
          <%= f.text_field :phone_number, class: "col-sm-2 form-control-static" %>
        </div>
        <div class="text-center my-lg-3">
          <%= f.submit "編集内容を保存", class: "col-sm-3 mr-lg-5 btn btn-success" %>
          <%= link_to '退会する', hide_end_users_path, class: "ml-lg-5 btn btn-danger"%>
        </div>
      <% end %>
  </div>
</div>


