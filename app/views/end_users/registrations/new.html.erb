<%= form_with model: @end_user, url: end_user_registration_path do |f| %>
  <%= render "end_users/shared/error_messages", resource: resource %>

    <%= f.label :"名前" %>
    <%= f.label :"(姓)" %>
    <%= f.text_field :last_name, placeholder: "令和" %>
    <%= f.label :"(名)" %>
    <%= f.text_field :first_name, placeholder: "道子" %>

    <%= f.label :"フリガナ" %>
    <%= f.label :"(セイ)" %>
    <%= f.text_field :last_kana_name, autofocus: true, placeholder: "レイワ" %>
    <%= f.label :"(メイ)" %>
    <%= f.text_field :first_kana_name, autofocus: true, placeholder: "ミチコ" %>
 
    <%= f.label :"メールアドレス" %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>

    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, placeholder: "0000000" %>

    <%= f.label :"住所" %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
 
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :phone_number, placeholder: "00000000000" %>

    <%= f.label :"パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> characters minimum)
    <% end %>

    <%= f.password_field :password, autocomplete: "new-password" %>
  
    <%= f.label :"(確認用)" %>

    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <%= f.submit "新規登録" %>
<% end %>
<%= render "end_users/shared/links" %>