<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-white">
    <div class="container">
      <div class="row">
        <a class="navbar-brand" href="/"><%= image_tag "logo.png", width: "200px", height: "100%" %></a>
      </div>
      <div class="row">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">

          <!--管理者としてログインした場合のヘッダー-->
          <% if admin_signed_in? %>
            <li><%= link_to "About", about_path, class: "btn btn-outline-secondary mx-3" %></li>
            <li><%= link_to "商品一覧", admins_products_path, class: "btn btn-outline-secondary mx-3" %></li>
            <li><%= link_to "会員一覧", admins_end_users_path, class: "btn btn-outline-secondary mx-3" %></li>
            <li><%= link_to "注文履歴一覧", admins_path, class: "btn btn-outline-secondary mx-3" %></li>
            <li><%= link_to "ジャンル一覧", admins_genres_path, class: "btn btn-outline-secondary mx-3" %></li>
            <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary mx-3" %></li>

          <!--会員としてログインした場合のヘッダー-->
          <% elsif end_user_signed_in? %>
            <li><%= link_to "マイページ", end_users_path, class: "btn btn-outline-secondary mx-3" %></li>
            <li><%= link_to "商品一覧", products_path, class: "btn btn-outline-secondary mx-3" %></li>
            <li><%= link_to "カート", cart_items_path, class: "btn btn-outline-secondary mx-3" %></li>
            <li><%= link_to "ログアウト", destroy_end_user_session_path, method: :delete, class: "btn btn-outline-secondary mx-3" %></li>

          <!--ログインしていない場合のヘッダー-->
          <% else %>
            <li><%= link_to "About", about_path, class: "btn btn-outline-secondary mx-3" %></li>
            <li><%= link_to "商品一覧", products_path, class: "btn btn-outline-secondary mx-3" %></li>
            <li><%= link_to "新規登録", new_end_user_registration_path, class: "btn btn-outline-secondary mx-3" %></li>
            <li><%= link_to "ログイン", new_end_user_session_path, class: "btn btn-outline-secondary mx-3" %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>